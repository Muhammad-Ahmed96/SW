@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="container">
   
        <h2 class="text-center">Register</h2>
        <form class="form-group" method="post" action="/Home/Register">
            <div class="row" style="display:flexbox;flex-direction:row">
                <div class="col-lg-6">
                    <label>Email</label>
                    <input type="text" class="form-control" id="email_txt" />
                    <label>Password</label>
                    <input type="password" class="form-control" id="password_txt" />
                    <label>Name</label>
                    <input type="text" class="form-control" id="name_txt" />
                </div>
                <div class="col-lg-5 col-lg-offset-1">
                    <label>Address</label>
                    <input type="text" class="form-control" id="address_txt" />
                    <label>Country</label>
                    <input type="text" class="form-control" id="country_txt" />
                    <label>City</label>
                    <input type="text" class="form-control" id="city_txt" />
                    <label>Phone No</label>
                    <input type="text" class="form-control" id="phone_txt" />
                    <label>Gender</label>
                    <select class="form-control" id="gen">
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                    <br />
                    <div>
                        <button type="submit" class="btn btn-info btn-block" id="register_btn">Register</button>
                    </div>
                </div>
            </div>
</form>
        </div>


